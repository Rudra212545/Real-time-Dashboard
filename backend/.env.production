# Production Environment Configuration

NODE_ENV=production
PORT=3000

# JWT Configuration
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_SECRET
JWT_ISSUER=sovereign-core-prod
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Engine Security
ENGINE_SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_KEY
ENGINE_NONCE_WINDOW=30000

# Database
MONGODB_URI=mongodb://localhost:27017/sovereign-prod
MONGODB_POOL_SIZE=10

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://dashboard.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/production.log

# Socket.IO
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Job Queue
JOB_TIMEOUT=30000
JOB_MAX_RETRIES=3
QUEUE_MAX_SIZE=1000
