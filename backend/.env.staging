# Staging Environment Configuration

NODE_ENV=staging
PORT=3000

# JWT Configuration
JWT_SECRET=staging_secret_change_in_deployment
JWT_ISSUER=sovereign-core-staging
JWT_EXPIRY=2h
JWT_REFRESH_EXPIRY=7d

# Engine Security
ENGINE_SECRET_KEY=staging_engine_key_change_in_deployment
ENGINE_NONCE_WINDOW=30000

# Database
MONGODB_URI=mongodb://localhost:27017/sovereign-staging
MONGODB_POOL_SIZE=5

# CORS
ALLOWED_ORIGINS=https://staging.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=200

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/staging.log

# Socket.IO
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Job Queue
JOB_TIMEOUT=30000
JOB_MAX_RETRIES=3
QUEUE_MAX_SIZE=500
